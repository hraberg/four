#!/bin/bash -e

PROJECT=four
JAR=$PROJECT.jar
CLOJURE_VERSION=1.5.0-alpha3

rm -rf target
lein jar

cd target
zip -q $JAR -d "META-INF/maven*" "META-INF/leiningen*" "*.class"
cd classes
zip -q ../$JAR $PROJECT.class
cd ..
pack200  -G -Ustrip -r $JAR
SIZE=`ls -l $JAR | awk '{print $5}'`
echo "$JAR $SIZE"

if [ $SIZE -gt 4096 ]; then
   echo "$JAR is too big"
   exit 1
fi

java -cp ~/.m2/repository/org/clojure/clojure/$CLOJURE_VERSION/clojure-$CLOJURE_VERSION.jar:$JAR $PROJECT
